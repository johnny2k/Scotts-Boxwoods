<div id="catalog">
	<table id="catalog">
			<% @products.each do |product| %>
				<tr>
					<td><%= image_tag(product.image, :size => "192x256") %></td>

					<td width="200">
						<%= product.name %> <br /> 
						<small>
							<%= product.description %> <br />
						</small>
						<strong><%= number_to_currency(product.price) %> </strong><br />

						<%= form_tag :controller => "Catalog", :action => "add_to_cart", :id => product do %>
							Quantity:<%= number_field_tag(:how_many, 1, :in => 1...10000) %><br />
							<%= submit_tag "Add to cart", :name => nil %>
            <% end %>							

					</td>
					<td>
				</tr>
				
			<% end %>
	</table>
</div>

