<h1 style="text-align: center;color: white;background-color:#003300", class="page_header">Orders</h1>

<table class="cool_table", id="order_table">
  <tr style="color:white;font-size:20px">
    <th>Name</th>
    <th>Phone</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td class="cool_table_data"><%= order.name %></td>
    <td class="cool_table_data"><%= order.phone %></td>
    <td class="cool_table_data"><%= button_to 'Show', order %></td>
    <td class="cool_table_data"><%= button_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

